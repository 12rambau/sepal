{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "source_ami": "",
    "region": "",
    "version": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "Sandbox - {{user `version`}}",
    "tags": {
      "Build_Number": "{{user `version`}}"
    }
  }],
  "provisioners": [{
    "type": "ansible",
    "playbook_file": "../ansible/provision-sandbox/provision.yml"
  }]
}